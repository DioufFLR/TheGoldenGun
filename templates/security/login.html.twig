    <div class="container form-white" style="width: 23rem; padding-top: 10rem">
        <form method="post">

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté(e) comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
                </div>
            {% endif %}

            <h1 class="h3 mb-3 font-weight-normal">Me connecter</h1>
            <!-- Email input -->
            <div class="form-outline mb-4">
                <input type="email" id="inputEmail" class="form-control text-white" value="{{ last_username }}"/>
                <label class="form-label" for="inputEmail">Email</label>
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <input type="password" id="inputPassword" class="form-control text-white" />
                <label class="form-label" for="inputPassword">Mot de passe</label>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <!-- 2 column grid layout for inline styling -->
            <div class="row mb-4">
                <div class="col d-flex justify-content-center">
                    <!-- Checkbox -->
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="form2Example34" checked />
                        <label class="form-check-label" for="form2Example34"> Rester connecté </label>
                    </div>
                </div>

                <div class="col">
                    <!-- Simple link -->
                    <a href="#!">Mot de passe oublié</a>
                </div>
            </div>

            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Me connecter</button>

            <!-- Register buttons -->
            <div class="text-center">
                <p>Pas encore membre ? <a href="#!">S'inscrire</a></p>
                <p>Où s'inscrire avec :</p>
                <button type="button" class="btn btn-secondary btn-floating mx-1">
                    <i class='bx bxl-facebook-circle' style='color:#3b71ca' ></i>
                </button>

                <button type="button" class="btn btn-secondary btn-floating mx-1">
                    <i class='bx bxl-google' style='color:#3b71ca' ></i>
                </button>

                <button type="button" class="btn btn-secondary btn-floating mx-1">
                    <i class='bx bxl-twitter' style='color:#3b71ca'  ></i>
                </button>

                <button type="button" class="btn btn-secondary btn-floating mx-1">
                    <i class='bx bxl-github d-flex' style='color:#3b71ca' ></i>
                </button>
            </div>
        </form>
    </div>

{% endblock %}

